    {
      "code": "MDPY",
      "display": "Medical Payments",
      "definition": "Pays medical expenses for third parties injured in connection with the insured's operations, regardless of fault.",
      "designation": [
        { "language": "fr-CA", "value": "Frais médicaux" },
        { "language": "es-MX", "value": "Pagos médicos" }
      ]
    },
    {
      "code": "DRPR",
